<script>

document.addEventListener("DOMContentLoaded", function(){

  $allNavBurgers = document.querySelectorAll(".navbar-burger");
  $allNavBurgers.forEach( function($burger) {
    $burger.addEventListener("click", function(){
      $targetEl = document.getElementById($burger.dataset.target);
      $targetEl.classList.toggle('is-active');
      $burger.classList.toggle('is-active');
    });
  });

  // Close the notifications via close button
  document.querySelectorAll(".notification button.delete").forEach( function(el) {
    el.addEventListener(
      "click",
      function(event) {

        event.preventDefault();

        if(el.parentNode.classList) {
          el.parentNode.classList.add("is-hidden");
        } else {
          el.parentNode.className += " is-hidden"
        }
      }
    );
  });

});
</script>
