<!DOCTYPE html>
<html>
  <head>
    <title>Blog Posts</title>
    <%- include("../partials/head") %>
  </head>
  <body>
    <header>
      <%- include("../partials/header") %>
    </header>

    <section class="section">
      <div class="container">
        <%- include( "../partials/flashmessage", { flashMessage } ) %>
        <div class="container">
          <div class="has-text-right has-text-centered-mobile">
            <a class="button is-primary" href="/posts/create">Create new Post</a>
          </div>
        </div>
        <% typeof(posts) != "undefined" && posts.forEach( (post) => { %>
          <div class="box">
            <p>
              <strong><%- post.title %></strong>
              <br/>
              <small><%- post._creator.username %></small> . <small><%- post.createdAt.toDateString() %></small>
              <br />
              <%- post.text.substring(0,180) %> <span>&hellip;</span> <a href="/posts/<%- post._id %>">Read More</a>
            </p>
          </div>
        <% }); %>

        <div class="pagination">
          <a class="pagination-previous" title="This is a first page" disabled>Previous</a>
          <a class="pagination-next" title="There is only one page" disabled>Next</a>
          <ul class="pagination-list">
            <li>
              <a class="pagination-link is-current" href="/posts?page=1">1</a>
            </li>
            <!-- <li>
              <a class="pagination-link" href="#">2</a>
            </li>
            <li>
              <a class="pagination-link" href="#">3</a>
            </li>
            <li>
              <span class="pagination-ellipsis">&hellip;&hellip;</span>
            </li>
            <li>
              <a class="pagination-link" href="#">7</a>
            </li> -->
          </ul>
        </div>

      </div>
    </section>

    <footer class="footer">
      <%- include("../partials/footer") %>
    </footer>
  </body>
</html>
